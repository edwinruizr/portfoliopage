    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container drawings">
      <h1 class="text-center">Drawings Page</h1>
      <div class="row">
      <% for( var i=0 ; i<docs.length; i++) {%>
          <div class="col-lg-4">
            <button id="l<%=i %>" class="thumbnail">
            <img class="img" src=<%= docs[i].url_medium %> alt=<%= docs[i].drawing_alt_text %>>
          </button>
            <h2><%= docs[i].drawing_alt_text %></h2>
            <p>by <%= docs[i].artist_name %></p>
            <button id="<%= i %>" class="btn btn-default modal-button" href="#" role="button">View details &raquo;</button>
          </div><!-- /.col-lg-4 -->

                  <!-- The Modal -->
                  <div id="modal<%= i %>" class="modal">

                    <!-- Modal content -->
                    <div class="modal-content">
                      <span class="close"><i class="glyphicon glyphicon-remove-circle"></i></span>
                      <img class="img modal-img img-responsive" src=<%= docs[i].url_large %> alt=<%= docs[i].drawing_alt_text %>>
                    </div>

                  </div>
      <% } %>
      </div><!-- /.row -->
